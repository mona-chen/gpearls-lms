<!DOCTYPE html>
<html>
<head>
  <title>Site Settings - LMS Setup Wizard</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
  <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
</head>
<body class="bg-gray-50 min-h-screen">
  <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <div class="mx-auto h-16 w-16 bg-blue-600 rounded-full flex items-center justify-center">
          <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
          Site Settings
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Configure your LMS basic information
        </p>
      </div>

      <div class="bg-white py-8 px-6 shadow rounded-lg">
        <%= form_with url: setup_wizard_path, method: :patch, local: true do |f| %>
          <%= f.hidden_field :step, value: 'site_settings' %>

          <% if @error %>
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
              <%= @error %>
            </div>
          <% end %>

          <div class="space-y-6">
            <div>
              <%= f.label :site_name, "Site Name", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_field :site_name, value: @setup_data.dig('site_settings', 'site_name') || 'Learning Management System',
                    required: true, class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
              </div>
            </div>

            <div>
              <%= f.label :site_description, "Site Description", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= f.text_area :site_description, value: @setup_data.dig('site_settings', 'site_description') || 'A comprehensive learning management system for online education',
                    rows: 3, class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" %>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div>
                <%= f.label :default_currency, "Default Currency", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.select :default_currency, [['USD', 'USD'], ['EUR', 'EUR'], ['GBP', 'GBP'], ['INR', 'INR']],
                      { selected: @setup_data.dig('site_settings', 'default_currency') || 'USD' },
                      { class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" } %>
                </div>
              </div>

              <div>
                <%= f.label :default_timezone, "Default Timezone", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.select :default_timezone, [['UTC', 'UTC'], ['America/New_York', 'America/New_York'], ['Europe/London', 'Europe/London'], ['Asia/Kolkata', 'Asia/Kolkata']],
                      { selected: @setup_data.dig('site_settings', 'default_timezone') || 'UTC' },
                      { class: "appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-blue-500 focus:border-blue-500 focus:z-10 sm:text-sm" } %>
                </div>
              </div>
            </div>

            <div class="space-y-4">
              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <%= f.check_box :enable_registration, checked: @setup_data.dig('site_settings', 'enable_registration') != false,
                      class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :enable_registration, "Allow user registration", class: "font-medium text-gray-700" %>
                  <p class="text-gray-500">Users can create accounts on the platform</p>
                </div>
              </div>

              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <%= f.check_box :enable_public_courses, checked: @setup_data.dig('site_settings', 'enable_public_courses') != false,
                      class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :enable_public_courses, "Public course access", class: "font-medium text-gray-700" %>
                  <p class="text-gray-500">Courses are visible to non-registered users</p>
                </div>
              </div>
            </div>

            <div class="flex space-x-4">
              <a href="<%= setup_wizard_path(step: 'welcome') %>"
                 class="flex-1 flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                Back
              </a>
              <%= f.submit "Continue", class: "flex-1 flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>